        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <ListView Name="listView" Margin="10,10,289,71">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
