        <Label Name="FullCoast" Content="К оплате: " HorizontalAlignment="Left" Margin="582,559,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button Content="Купить" HorizontalAlignment="Left" Margin="559,595,0,0" VerticalAlignment="Top" Height="53" Width="166" FontSize="20" Click="Button_Click_2"/>
        <TextBox Name="CountBook" HorizontalAlignment="Left" Margin="582,521,0,0" TextWrapping="NoWrap" Text="1" TextAlignment="Center" VerticalAlignment="Top" Width="120" FontSize="20" InputScope="Number" TextChanged="TextBox_TextChanged"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="545,521,0,0" VerticalAlignment="Top" Height="29" Width="30" FontSize="20" Click="Button_Click"/>
