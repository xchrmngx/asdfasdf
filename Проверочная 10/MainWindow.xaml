        <Image Name="imgBook" HorizontalAlignment="Left" Height="217" Margin="560,10,0,0" VerticalAlignment="Top" Width="149"/>
        <TextBlock Name="BookName" Margin="530,232,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"/>
